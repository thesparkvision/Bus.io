<Login>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text:'[color=3ca72b][font=Broadway]Login here[/font][/color]'
            font_size: 54
            markup:True
        BoxLayout:
            orientation: 'vertical'
            spacing:50
            
            BoxLayout:
                orientation: 'horizontal'

                #Label:
                    #text: 'Username'
                    #font_size: 20
                    #halign: 'left'
                    #text_size: root.width-20, root.height-20
                    #size_hint:.5,1

                TextInput:
                    id: login
                    multiline:False
                    font_size: 18
                    #text_size: root.width-20, root.height-20
                    size_hint:.2,1
                    hint_text:'Username'
                    text:''

            BoxLayout:
                orientation: 'horizontal'

                #Label:
                    #text: 'Password'
                    #halign: 'left'
                    #font_size: 20
                    #text_size: root.width-20, 20
                    #size_hint:.5,1

                TextInput:
                    id: password
                    multiline:False
                    password:True
                    font_size: 18
                    size_hint:.5,1
                    hint_text:'Password'
                    text:''

        BoxLayout:
            orientation:'vertical'

            Label:
                text:''
                id:err
                font_size: 18
                size_hint: 1,.2
                pos_hint: {'center_x':.5, 'center_y':.9}

            Button:
                text: 'Login'
                #size: 180,50
                font_size: 24
                size_hint: 1,.3
                on_press: root.do_login(login.text, password.text)
                pos_hint: {'center_x':.5, 'center_y':.9}

            Button:
                text: '[u]Forgot Password[/u]'
                #size: 180,50
                font_size: 14
                size_hint: 1,.5
                background_color:0,0,0,0
                markup:True
                on_press:root.forgot_password()
                pos_hint: {'center_x':.5, 'center_y':.9}