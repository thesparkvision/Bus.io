<ChangePassword>:
    BoxLayout:
        orientation:'vertical'
        spacing:50
        padding:[10,50,10,50]
        Label:
            text:'[color=3ca72b][font=Broadway]Change Password[/font][/color]'
            font_size:44
            size_hint:1,.4
            markup:True
        TextInput:
            id:uid
            text:'New Password'
            size_hint:1,.1
            font_size:18
        TextInput:
            id:ied
            text:'Confirm password'  
            size_hint:1,.1
            font_size:18 
        Button:
            text:'Change'
            size_hint:1,.1
            on_press:root.change(uid.text,ied.text)