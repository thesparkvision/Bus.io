<ForgotPassword>:
    BoxLayout:
        orientation:'vertical'
        spacing:50
        padding:[0,0,0,0]
        BoxLayout:
            orientation:'horizontal'
            size_hint_y:.1
            Button:
                text:'Back'
                on_press:root.go_login()
                size_hint_x:.3
            Label:
                text:'     '
                markup:True
        Label:
            text:'[color=3ca72b][font=Broadway]Forgot Password[/font][/color]'
            font_size:44
            size_hint:1,.4
            markup:True
        TextInput:
            id:uid
            hint_text:'Username'
            text:''
            size_hint:1,.1
            font_size:18
       

        #TextInput:
            #id:otp
            #text:'OTP'  
            #size_hint:1,.1
            #font_size:18 
        Button:
            text:'Submit'
            size_hint:1,.1
            on_press:root.sendotp(uid.text)
        Label:
            id:err
            text:''
            size_hint:1,.1
            font_size:18