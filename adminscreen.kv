<AdminScreen>:
    BoxLayout:
        orientation:'vertical'
        spacing:30
        padding:[10,20,20,10]
        BoxLayout:
            orientation:'horizontal'
            size_hint_y:.2
			#padding:[20,20]
            Button:
				text:'Back'
                on_press:root.GoBack()
                size_hint:1,1
				#pos_hint: {'center_x':.5, 'center_y':.5}
		Label:
            text:''
            font_size:28
            size_hint:1,.2
            markup:True 
			color:0,1,1,1 	
			
		Label:
            text:'[font=Broadway]This section is for Admins only[/font]'
            font_size:24
            size_hint:1,.2
            markup:True 
			color:0,1,1,1 
			
		Label:
            text:''
            font_size:28
            size_hint:1,.2
            markup:True 
			color:0,1,1,1 			
	
        Button:
            text:'Manage '
            size_hint:1,.2
            on_press:root.GoManage()
			pos_hint: {'center_x':.5, 'center_y':.5}
			
        Button:
            text:'Track'
            size_hint:1,.2
            on_press:root.GoTrack()
			pos_hint: {'center_x':.5, 'center_y':.5}
			
		Label:
            text:''
            font_size:28
            size_hint:1,.2
            markup:True 
			color:0,1,1,1 	